<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_textview_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="647dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="84dp">

        <Button
            android:id="@+id/nav_button_add_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Term" />

        <Button
            android:id="@+id/nav_button_add_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Course" />

        <Button
            android:id="@+id/nav_button_add_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Assessment" />

        <Button
            android:id="@+id/nav_button_view_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Terms" />

        <Button
            android:id="@+id/nav_button_view_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Courses" />

        <Button
            android:id="@+id/nav_button_view_assessments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Assessments" />

        <Button
            android:id="@+id/nav_button_TestData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Test Data" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>